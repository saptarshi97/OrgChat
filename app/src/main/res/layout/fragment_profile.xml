<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/padding_2x"
    android:paddingBottom="@dimen/padding_2x">

    <LinearLayout
        android:id="@+id/name_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_default"
        android:layout_marginRight="@dimen/padding_default">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_profile_dark"
            android:alpha="0.54"/>

        <TextView
            android:id="@+id/display_details_name_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Name"
            android:layout_marginStart="@dimen/padding_2x"
            android:layout_marginLeft="@dimen/padding_2x"
            android:textColor="@color/black"
            android:textSize="@dimen/typography_title"
            android:fontFamily="sans-serif-medium"/>

    </LinearLayout>

    <View
        android:id="@+id/divider_1"
        android:layout_below="@id/name_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="@dimen/padding_2x"
        android:layout_marginBottom="@dimen/padding_default"
        android:background="@color/dividerColor"/>

    <LinearLayout
        android:id="@+id/details_relative_layout"
        android:layout_below="@id/divider_1"
        android:layout_marginLeft="@dimen/padding_default"
        android:layout_marginRight="@dimen/padding_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/padding_default">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_details"
            android:alpha="0.54"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/padding_2x"
            android:layout_marginLeft="@dimen/padding_2x">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/details"
                android:textColor="@color/black"
                android:textSize="@dimen/typography_title"
                android:fontFamily="sans-serif-medium"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Organization"
                    android:textSize="@dimen/typography_subheading"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/details_display_organization_text_view"
                    android:layout_width="wrap_content"
                    tools:text="000 000 0000"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:layout_marginStart="@dimen/padding_half"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Position"
                    android:textSize="@dimen/typography_subheading"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/details_display_position_text_view"
                    android:layout_width="wrap_content"
                    tools:text="000 000 0000"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:layout_marginStart="@dimen/padding_half"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/phone"
                    android:textSize="@dimen/typography_subheading"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/details_display_phone_text_view"
                    android:layout_width="wrap_content"
                    tools:text="000 000 0000"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:layout_marginStart="@dimen/padding_half"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/email"
                    android:textSize="@dimen/typography_subheading"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/details_display_email_text_view"
                    android:layout_width="wrap_content"
                    tools:text="x@x.com"
                    android:layout_marginStart="@dimen/padding_half"
                    android:layout_marginLeft="@dimen/padding_half"
                    android:layout_height="wrap_content" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_below="@id/details_relative_layout"
        android:id="@+id/divider_2"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="@dimen/padding_2x"
        android:background="@color/dividerColor"/>

</RelativeLayout>